function jiupaipay_topup_feedback_ajax(){
    $journal_id = $_GET ['journal_id'];
    $result = db_query("SELECT status,data FROM {cowpro_fund_journal} WHERE journal_id='".$journal_id."' and status<>99");
    $journal_data = array ();
    foreach ($result as $record) {
      $journal_data=unserialize($record->data);
      $respMsg=$journal_data['result']['inBody']['respMsg'];

      if ($record->status == 1) {
        $response=$respMsg;
      }else if ($record->status == 0) {
        $response=$respMsg;
      }
    }
    drupal_json_output ( $response );
}

