/*
 * $fund_type 类型参考 cowpro_fund_type.inc
 */
function jiupaipay_result_parser($fund_type, $result) {
	  $msg = '';
	  $data = $result;
        switch ($fund_type) {
            case 'TOPUP' :
            case 'WITHDRAW' :
                if( array_key_exists("inBody", $data ['result']) ) {
                  if( $data ['result'] ['inBody'] ['respCode'] == "P2P0000" ) {
                    $msg = "-";
                  }else{
                    $msg = $data ['result'] ['inBody'] ['respMsg'] . '-' . $data ['result'] ['inBody'] ['respCode'];
                  }
                }
             break; 
             case 'INTERNAL_TRANS' :
                 if( $data ['result']['result_code'] == "P2P0000" ) {
                     $msg = $data ['comment'];
                 }else{
                     $msg = $data ['result']['message'] . '-' . $data ['result']['result_code'];
                 }
                    break; 
        }
        
	return $msg;
}

